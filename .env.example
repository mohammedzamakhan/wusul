# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Server
HOST=localhost
CORS_ORIGIN=*

# Database
DATABASE_URL="postgresql://wusul:wusul_password@localhost:5432/wusul_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# API Keys (for dual authentication)
# Generate these using: openssl rand -hex 32
ACCOUNT_ID_SALT=your-account-id-salt-here
SHARED_SECRET_SALT=your-shared-secret-salt-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_RETRY_ATTEMPTS=10
WEBHOOK_RETRY_TIMEOUT_HOURS=6

# Apple Wallet Integration
APPLE_TEAM_ID=
APPLE_PASS_TYPE_ID=
APPLE_CERTIFICATE_PATH=
APPLE_CERTIFICATE_PASSWORD=

# Google Wallet Integration
GOOGLE_APPLICATION_CREDENTIALS=
GOOGLE_ISSUER_ID=

# Regional Settings
DEFAULT_TIMEZONE=Asia/Dubai
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# External Services
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_PRAYER_TIME_INTEGRATION=true
ENABLE_ARABIC_RTL=true
ENABLE_UAE_PASS_INTEGRATION=false
ENABLE_ABSHER_INTEGRATION=false
