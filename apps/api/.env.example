# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Server
HOST=localhost
CORS_ORIGIN=*

# Database
DATABASE_URL="postgresql://wusul:wusul_password@localhost:5432/wusul_db?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# API Keys (for dual authentication)
# Generate these using: openssl rand -hex 32
ACCOUNT_ID_SALT=your-account-id-salt-here
SHARED_SECRET_SALT=your-shared-secret-salt-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_RETRY_ATTEMPTS=10
WEBHOOK_RETRY_TIMEOUT_HOURS=6

# Apple Wallet Integration (Phase 2)
APPLE_TEAM_ID=your-apple-team-id
APPLE_PASS_TYPE_ID=pass.com.wusul.access
APPLE_CERT_PASSPHRASE=your-certificate-passphrase
APPLE_NFC_ENCRYPTION_KEY=your-nfc-encryption-key
API_BASE_URL=https://api.wusul.com

# Google Wallet Integration (Phase 2)
GOOGLE_WALLET_ISSUER_ID=your-issuer-id
# Place service-account.json in certificates/google/

# Regional Settings
DEFAULT_TIMEZONE=Asia/Dubai
DEFAULT_LANGUAGE=ar
SUPPORTED_LANGUAGES=ar,en

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# SMS Notifications (Phase 2 - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Notifications (Phase 2 - SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@wusul.com

# Monitoring & Analytics
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_PRAYER_TIME_INTEGRATION=true
ENABLE_ARABIC_RTL=true
ENABLE_UAE_PASS_INTEGRATION=false
ENABLE_ABSHER_INTEGRATION=false
