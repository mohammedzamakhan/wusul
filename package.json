{
  "name": "wusul",
  "version": "1.0.0",
  "description": "Digital Access Control Platform - Monorepo - وصول",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "nx run api:serve",
    "build": "nx run-many --target=build --all",
    "build:api": "nx run api:build",
    "build:sdk": "nx run node-sdk:build",
    "start": "nx run api:start",
    "test": "nx run-many --target=test --all",
    "test:api": "nx run api:test",
    "test:sdk": "nx run node-sdk:test",
    "test:php-sdk": "nx run php-sdk:test",
    "test:python-sdk": "nx run python-sdk:test",
    "test:rust-sdk": "nx run rust-sdk:test",
    "build:rust-sdk": "nx run rust-sdk:build",
    "lint:rust-sdk": "nx run rust-sdk:lint",
    "format:rust-sdk": "nx run rust-sdk:format",
    "install:php-sdk": "nx run php-sdk:install",
    "install:python-sdk": "nx run python-sdk:install",
    "install:python-sdk:dev": "nx run python-sdk:install:dev",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "prisma:generate": "nx run api:prisma:generate",
    "prisma:migrate": "nx run api:prisma:migrate",
    "prisma:studio": "nx run api:prisma:studio",
    "docker:up": "nx run api:docker:up",
    "docker:down": "nx run api:docker:down",
    "prepare": "husky install"
  },
  "keywords": [
    "access-control",
    "nfc",
    "digital-wallet",
    "apple-wallet",
    "google-wallet",
    "mena",
    "api",
    "sdk",
    "monorepo"
  ],
  "author": "Wusul Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "googleapis": "^164.1.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "i18next": "^25.6.0",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.1",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^3.3.8",
    "nodemailer": "^7.0.10",
    "passkit-generator": "^3.5.5",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "twilio": "^5.10.4",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nx/js": "^22.0.2",
    "@nx/node": "^22.0.2",
    "@nx/workspace": "^22.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^7.0.3",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/ui": "^4.0.6",
    "c8": "^10.1.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nx": "^22.0.2",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
