{
  "name": "java-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/java-sdk/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:sdk"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/target"],
      "options": {
        "command": "mvn clean package -DskipTests",
        "cwd": "packages/java-sdk"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/target/surefire-reports"],
      "options": {
        "command": "mvn test",
        "cwd": "packages/java-sdk"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn clean",
        "cwd": "packages/java-sdk"
      }
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn install -DskipTests",
        "cwd": "packages/java-sdk"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "mvn deploy",
        "cwd": "packages/java-sdk"
      },
      "dependsOn": ["build"]
    }
  }
}
