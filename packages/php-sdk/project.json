{
  "name": "php-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/php-sdk/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:sdk"],
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer install",
        "cwd": "packages/php-sdk"
      }
    },
    "update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer update",
        "cwd": "packages/php-sdk"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer test",
        "cwd": "packages/php-sdk"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/packages/php-sdk/coverage"],
      "options": {
        "command": "composer test:coverage",
        "cwd": "packages/php-sdk"
      }
    },
    "analyse": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer analyse",
        "cwd": "packages/php-sdk"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "composer analyse",
        "cwd": "packages/php-sdk"
      }
    }
  }
}
