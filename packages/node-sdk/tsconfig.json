{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/packages/node-sdk",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
