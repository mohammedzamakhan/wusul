{
  "name": "node-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node-sdk/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:sdk"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node-sdk",
        "main": "packages/node-sdk/src/index.ts",
        "tsConfig": "packages/node-sdk/tsconfig.json",
        "assets": ["packages/node-sdk/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/node-sdk/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/node-sdk/**/*.ts"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "packages/node-sdk"
      },
      "dependsOn": ["build"]
    }
  }
}
